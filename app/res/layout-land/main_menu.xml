<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#212120">

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" >
    </com.markupartist.android.widget.ActionBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/countries_btn_bg"
            android:text="@string/btnCountry"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/countries_btn_bg"
            android:text="@string/btnHelp"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/countries_btn_bg"
            android:text="@string/btnAbout"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="30dip"
            android:text="@string/siteweburl"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button4"
            android:layout_width="450dp"
            android:layout_height="5dp"
            android:background="@drawable/bottom_color"
            android:textSize="20sp" />
    </LinearLayout>
    
</LinearLayout>
